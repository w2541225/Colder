@{
    Layout = "~/Views/Shared/_Layout_List.cshtml";
}

<div class="fx-content">
    <div id="toobar">
        <div class="btn-group btn-group-sm">
            <button onclick="openForm('', '添加数据');" type="button" class="btn btn-default" aria-label="Left Align">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                添加
            </button>
            <button onclick="deleteData();" type="button" class="btn btn-default" aria-label="Right Align">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                删除
            </button>
            <button type="button" class="btn btn-default" aria-label="Right Align" onclick="javascript: location.reload();">
                <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                刷新
            </button>
        </div>
    </div>
    <div class="fx-wrapper">
        <form class="form-inline" id="searchForm">
            <div class="form-group">
                <label>查询类别</label>
                <select class="selectpicker" name="condition" data-style="btn-default btn-sm" data-width="100px">
                    <option value="">请选择</option>
                    
                    <option value="Menu_Id">菜单主键</option>
                    <option value="ParentId">父节点主键</option>
                    <option value="Menu_Name">菜单名称</option>
                    <option value="Menu_Title">菜单标记</option>
                    <option value="Menu_Img">菜单图标</option>
                    <option value="NavigateUrl">导航地址</option>
                    <option value="Target">目标</option>
                    <option value="CreateUserId">创建用户主键</option>
                    <option value="CreateUserName">创建用户</option>
                    <option value="ModifyUserId">修改用户主键</option>
                    <option value="ModifyUserName">修改用户</option>
                </select>
                <input type="text" class="form-control input-sm" name="keyword" placeholder="请输入关键字">
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-default btn-sm" onclick="javascript: $('#dataTable').bootstrapTable('refresh', { silent: true });">
                    <i class="glyphicon glyphicon-search"></i>
                    查询
                </button>
            </div>
        </form>
    </div>
    <div class="fx-wrapper">
        <table id="dataTable" class="table-bordered"></table>
    </div>
</div>

<script>
    var $table = $('#dataTable');

    $(function () {
        initTable();
        bindEvent();
    });

    //初始化表格
    function initTable() {
        $table.bootstrapTable({
            url: '/Base_SysManage/Base_SysMenu/GetDataList',
            idField: 'Id',
            method: 'post',
            contentType: 'application/x-www-form-urlencoded',
            queryParamsType: '',
            clickToSelect: false,
            pagination: true,
            sidePagination: "server",
            pageNumber: 1,
            pageSize: 30,
            pageList: [10, 30, 60, 100],
            columns: [
                { title: 'ck', field: 'ck', checkbox: true, width: '3%' },
                { title: '菜单主键', field: 'Id', width: '5%' },
                { title: '父节点主键', field: 'ParentId', width: '5%' },
                { title: '菜单名称', field: 'MenuName', width: '5%' },
                { title: '菜单标记', field: 'MenuTitle', width: '5%' },
                { title: '菜单图标', field: 'MenuImg', width: '5%' },
                { title: '类型', field: 'MenuType', width: '5%' },
                { title: '导航地址', field: 'NavigateUrl', width: '5%' },
                { title: '目标', field: 'Target', width: '5%' },
                { title: '允许编辑 ', field: 'AllowEdit', width: '5%' },
                { title: '允许删除', field: 'AllowDelete', width: '5%' },
                { title: '排序吗', field: 'SortCode', width: '5%' },
                { title: '删除标记', field: 'DeleteMark', width: '5%' },
                { title: '创建时间', field: 'CreateDate', width: '5%' },
                { title: '创建用户主键', field: 'CreateUserId', width: '5%' },
                { title: '创建用户', field: 'CreateUserName', width: '5%' },
                { title: '修改时间', field: 'ModifyDate', width: '5%' },
                { title: '修改用户主键', field: 'ModifyUserId', width: '5%' },
                { title: '修改用户', field: 'ModifyUserName', width: '5%' },
                {
                    title: '操作', field: '_', width: '80%', formatter: function (value, row) {
                        var builder = new BtnBuilder();
                        builder.AddBtn({ icon: 'glyphicon-edit', function: 'openForm', param: [row['Id']] });
                        builder.AddBtn({ icon: 'glyphicon-trash', function: 'deleteData', param: [row['Id']] });

                        return builder.build();
                    }
                }
            ],
            queryParams: function (params) {
                var searchParams = $('#searchForm').getValues();
                $.extend(params, searchParams);

                return params;
            }
        });
    }

    //绑定事件
    function bindEvent() {

    }

    //打开表单
    function openForm(id, title) {
        dialogOpen({
            id: 'form',
            title: title,
            btn: ['确定', '取消'],
            height:'80%',
            url: '/Base_SysManage/Base_SysMenu/Form?id={0}'.format(id || ''),
            yes: function (window, body) {
                window.submitForm();
            }
        });
    }

    //删除数据
    function deleteData(id) {
        dialogComfirm('确认删除吗？', function () {
            var ids = [];

            if (typeof (id) == 'string') {//单条数据
                ids.push(id);
            } else {//多条数据
                var rows = $table.bootstrapTable('getSelections');
                if (rows.length == 0) {
                    dialogError('请选择需要删除的数据！');
                    return;
                } else {
                    $.each(rows, function (index, value) {
                        ids.push(value['Id']);
                    })
                }
            }

            loading();
            $.postJSON('/Base_SysManage/Base_SysMenu/DeleteData', { ids: JSON.stringify(ids) }, function (resJson) {
                loading(false);

                if (resJson.Success) {
                    $table.bootstrapTable('refresh');
                    dialogSuccess('删除成功!');
                }
                else {
                    dialogError(resJson.Msg);
                }
            });
        });
    }
</script>
